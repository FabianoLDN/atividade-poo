# Criando uma matriz 3x3 já com zeros
matriz = [[0, 0, 0],
          [0, 0, 0],
          [0, 0, 0]]

# Lendo os valores do usuário
for linha in range(3):
    for coluna in range(3):
        valor = int(input(f"Digite um valor para [{linha}, {coluna}]: "))
        matriz[linha][coluna] = valor

# Mostrando a matriz formatada
print("\nMatriz digitada:")
for linha in range(3):
    for coluna in range(3):
        print(f"[{matriz[linha][coluna]:^5}]", end="")
    print()  # Pula para a próxima linha

# A) Soma dos valores pares
soma_pares = 0
for linha in range(3):
    for coluna in range(3):
        if matriz[linha][coluna] % 2 == 0:
            soma_pares += matriz[linha][coluna]

# B) Soma dos valores da terceira coluna (índice 2)
soma_terceira_coluna = 0
for linha in range(3):
    soma_terceira_coluna += matriz[linha][2]

# C) Maior valor da segunda linha (índice 1)
maior_segunda_linha = matriz[1][0]
for coluna in range(1, 3):
    if matriz[1][coluna] > maior_segunda_linha:
        maior_segunda_linha = matriz[1][coluna]

# Mostrando os resultados
print("\n--- Resultados ---")
print("A) Soma dos valores pares:", soma_pares)
print("B) Soma dos valores da terceira coluna:", soma_terceira_coluna)
print("C) Maior valor da segunda linha:", maior_segunda_linha)
